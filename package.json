{
  "name": "matrix42-setup-inf",
	"displayName": "Matrix42 Setup.inf",
	"description": "Editing Matrix42 Setup.inf Files made easy",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onCommand:matrix42-setup-inf.insertInfo",
		"onCommand:matrix42-setup-inf.jumpSection"
	],
	"main": "./extension.js",
	"contributes": {
		"files.associations": {
            "*.inf": "inf"
        },
        "languages": [{
            "id": "inf",
            "aliases": ["inf", "inf"],
            "extensions": [".inf"],
            "configuration": "./language-configuration.json"
        }],
		"grammars": [
			{
				"language": "inf",
				"scopeName": "source.inf",
				"path": "./syntaxes/inf.tmLanguage.json"
			}
		],		
		"commands": [		
		{
            "command": "matrix42-setup-inf.insertInfo",
            "title": "Insert SetupInfo"
		},
		{
            "command": "matrix42-setup-inf.jumpSection",
            "title": "Jump to section"
		}	
	],
		"menus": {
			"editor/context": [
			  {
				"when": "resourceLangId == inf",
				"command": "matrix42-setup-inf.jumpSection",
				"group": "navigation"
			  },
			  {
				"when": "resourceLangId == inf",
				"command": "matrix42-setup-inf.insertInfo",
				"group": "navigation"
			  }			  
			]
		  }
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.63.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "eslint": "^8.6.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.5.4",
        "@vscode/test-electron": "^2.0.3"
    }

}
